<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifpb.listadecontatos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListaDeContatos">
        <activity
            android:name=".controller.EdicaoPessoa"
            android:exported="false" />
        <activity
            android:name=".controller.DetalhesPessoa"
            android:exported="false" />
        <activity
            android:name=".controller.Menu"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.CadastroPessoa"
            android:exported="false" />
        <activity
            android:name=".controller.MainActivity"
            android:exported="false" />
    </application>

</manifest>